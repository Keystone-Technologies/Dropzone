<div id="file_list">
  % foreach ( @$files ) {
    <div class="file_row">
      <a href="/uploads/<%= session 'uuid' %>/<%= $_ %>"><%= $_ %></a>
    <div class="clipboard-copy-div btn btn-mini" data-clipboard-text="http://<%= $domain %>/uploads/<%= session 'uuid' %>/<%= $_ %>" id="j_idt149:<%= $_ %>">Copy Link</div>
      <script type="text/javascript">
        startZclip('j_idt149:<%= $_ %>','/js/ZeroClipboard.swf', 'Copy Link', 'Copy Link');
      </script>
    </div>
  % }
</div>
