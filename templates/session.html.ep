<!DOCTYPE html>
<html>
    <head>
        <title><%= $name || 'Keystone IT - File Upload' %></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <link rel="shortcut icon" type="image/png" href="img/favicon.png"/>
        <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" rel="stylesheet">
        <link media="screen" type="text/css" href="css/style.css" rel="stylesheet"></link>
        <link rel="stylesheet" href="/css/dropzone.css" />
        <script src="/js/dropzone.js"></script>
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>
        <script src="/js/ZeroClipboard.js"></script>
        <script src="/js/ZeroClipboardClient.js"></script>
        <script>
            Dropzone.options.myAwesomeDropzone = {
              init: function() { 
                this.on("success", function(file) {
                  console.log("Added ", file.fullPath);
                  $.get("/<%= $uuid %>", function(data){
                    //console.log(data);
                    $("#file_list").html(data);
                  });
                });
              }
            };
            $(function(){
                setInterval(function(){
                    $.get("/<%= $uuid %>", function(data){
                        $("#file_list").html(data);
                    });
                }, 3000);
            });
        </script>
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <img src="img/logo.png" alt="Keystone IT" id="logo"/>
                <h1 id="title">File Upload</h1>
                <hr id="seperator">
            </div><!-- End Header -->
            <div id="Content">
                <div id="codeinput">
                    <p>Your upload session is: <b><a href="/<%= $uuid %>"><%= $name || $uuid %></a></b> (<a href="<%= url_for 'new' %>">new</a>)</p>
                    <div id="file_upload">
                        <form action="<%= url_for 'upload', uuid => $uuid %>" class="dropzone" id="my-awesome-dropzone"></form>
                    </div>
                    <div id="file_list_container">
                        <p>Uploaded Files:</p>
                        <div id="file_list">
                          %= include 'filelist'
                        </div>
                    </div>
                    % if ( stash 'mine' ) {
                      <p><a href="<%= url_for 'uuiddelete', uuid => $uuid %>">delete</a></p>
                    % }
                </div>
            </div><!-- End Content -->
        </div><!-- End Wrapper -->
    </body>
</html>
